<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:text="@string/title_activity_check_baby" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/titleReadings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@color/colorLightBlue"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:text="Readings"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="385dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pulseText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Pulse"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/pulseVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/pulseText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="120 bpm"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/pulseProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:background="#ffffff"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/pulseMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:text="240"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/pulseMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:text="60"
                        android:textSize="10sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/oxText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Oxygen level"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/oxVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/oxText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="100.00%"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/oxProgress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/oxVal"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress="48"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/colorLightBlue"
                        app:cpb_progressbar_color_start="#0043bf"
                        app:cpb_progressbar_width="7dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="23dp"
                        android:layout_toEndOf="@+id/oxVal"
                        android:text="100.00%"
                        android:textSize="10sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btempText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Body temperature"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btempVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/btempText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-136.84 C"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/btempProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:background="#ffffff"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/btempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:text="42.0"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/btempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:text="35.0"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/humidityText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Humidity"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/humidityVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/humidityText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="100.00%"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/humidityProgress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/humidityVal"
                        app:cpb_background_progressbar_color_direction="left_to_right"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress="48"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/colorLightBlue"
                        app:cpb_progressbar_color_start="#0043bf"
                        app:cpb_progressbar_width="7dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="23dp"
                        android:layout_toEndOf="@+id/humidityVal"
                        android:text="148.23%"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/atempText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Ambient temperature"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/atempVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/atempText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-100.00 C"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/atempProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:background="#ffffff"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/atempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:text="30.0"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/atempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:text="15.0"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iaqText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#777777"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="IAQ level"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/iaqVal"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/iaqText"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Hazardous"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/iaqProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/iaqVal"
                        android:background="#ffffff"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/iaqMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="59dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/iaqVal"
                        android:text="Great"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/iaqMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/iaqVal"
                        android:text="Bad"
                        android:textSize="10sp" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</LinearLayout>