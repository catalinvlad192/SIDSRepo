<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:text="@string/title_activity_check_baby" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/settings"
                android:layout_width="250dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/issuesButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/settings"
                android:background="@drawable/button_round2_no_bg"
                android:text="Issues" />

        </RelativeLayout>


        <TextView
            android:id="@+id/titleReadings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@color/colorLightBlue"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"
            android:text="Readings"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="385dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pulseText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Pulse"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/pulseVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/pulseText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="120 bpm"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/pulseProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:background="@color/white"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/pulseMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:text="240"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/pulseMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/pulseVal"
                        android:text="60"
                        android:textSize="10sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/oxText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Oxygen level"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/oxVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/oxText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="100.00%"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/oxProgress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/oxVal"
                        android:background="@color/white"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress="100"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/colorLightBlue"
                        app:cpb_progressbar_color_start="@color/great_green"
                        app:cpb_progressbar_color_end="@color/bad_red"
                        app:cpb_progressbar_color_direction="left_to_right"
                        app:cpb_progressbar_width="7dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:id="@+id/oxProgressVal"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="23dp"
                        android:layout_toEndOf="@+id/oxVal"
                        android:gravity="center"
                        android:text="100.00%"
                        android:textSize="10sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btempText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Body temperature"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btempVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/btempText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-136.84 C"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/btempProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:background="@color/white"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/btempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:text="40.0"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/btempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/btempVal"
                        android:text="35.0"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/humidityText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Humidity"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/humidityVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/humidityText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="100.00%"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/humidityProgress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/humidityVal"
                        android:background="@color/white"
                        app:cpb_background_progressbar_color_direction="left_to_right"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress="100"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/great_green"
                        app:cpb_progressbar_color_start="@color/bad_red"
                        app:cpb_progressbar_width="7dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:id="@+id/humidityProgressVal"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="23dp"
                        android:layout_toEndOf="@+id/humidityVal"
                        android:gravity="center"
                        android:text="148.23%"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/atempText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Ambient temperature"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/atempVal"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/atempText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-100.00 C"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ProgressBar
                        android:id="@+id/atempProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="135dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:background="@color/white"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/atempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:text="30.0"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/atempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/atempVal"
                        android:text="15.0"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iaqText"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="IAQ level"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/iaqVal"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@+id/iaqText"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Hazardous"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/iaqProgress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/iaqVal"
                        android:background="@color/white"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress="100"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/colorLightBlue"
                        app:cpb_progressbar_color_start="@color/great_green"
                        app:cpb_progressbar_color_end="@color/bad_red"
                        app:cpb_progressbar_color_direction="left_to_right"
                        app:cpb_progressbar_width="7dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:id="@+id/iaqProgressVal"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="26dp"
                        android:layout_toEndOf="@+id/iaqVal"
                        android:gravity="center"
                        android:text="Very unhealthy"
                        android:textSize="6sp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</LinearLayout>